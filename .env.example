APP_NAME="AICHA SHOP"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=127.0.0.1
DB_PORT=3306
DB_DATABASE=aicha_shop
DB_USERNAME=root
DB_PASSWORD=

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=file
SESSION_LIFETIME=120

MEMCACHED_HOST=127.0.0.1

REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ====================================
# AICHA SHOP SPECIFIC CONFIGURATION
# ====================================

# Wave API Configuration (Mobile Money Senegal)
WAVE_API_KEY=your_wave_api_key_here
WAVE_API_URL=https://api.wave.com/v1
WAVE_SECRET=your_wave_secret_here

# Orange Money API Configuration
ORANGE_MONEY_API_KEY=your_orange_money_api_key_here
ORANGE_MONEY_API_URL=https://api.orange.com/mobile-money/v1
ORANGE_MONEY_CLIENT_ID=your_client_id
ORANGE_MONEY_CLIENT_SECRET=your_client_secret

# Free Money API Configuration
FREE_MONEY_API_KEY=your_free_money_api_key_here
FREE_MONEY_API_URL=https://api.freemoney.sn/v1
FREE_MONEY_MERCHANT_ID=your_merchant_id

# Stripe Configuration (for Card Payments)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLIC_KEY=your_stripe_public_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# System Configuration
DEFAULT_COMMISSION_RATE=10
DEFAULT_TAX_RATE=18
DEFAULT_SHIPPING_COST=2000
DEFAULT_CURRENCY=XOF

# Stock Alerts
LOW_STOCK_THRESHOLD=10
ENABLE_STOCK_ALERTS=true

# Notifications
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_PUSH_NOTIFICATIONS=false

# SMS Provider (optional - for SMS notifications)
SMS_PROVIDER=twilio
TWILIO_SID=your_twilio_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=your_twilio_phone_number

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_MINUTES=15
SESSION_TIMEOUT=120

# File Upload
MAX_IMAGE_SIZE=2048
MAX_FILE_SIZE=5120
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,gif,webp
ALLOWED_FILE_TYPES=pdf,doc,docx,xlsx,csv

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_COMPRESS=true

# API Rate Limiting
API_RATE_LIMIT=60
API_RATE_LIMIT_WINDOW=1

# Frontend URL (for CORS and links)
FRONTEND_URL=http://localhost:3000

# Admin Default Credentials (change after first login)
ADMIN_EMAIL=admin@aichashop.sn
ADMIN_PASSWORD=SecurePassword123!

# Debug and Maintenance
MAINTENANCE_MODE=false
ENABLE_DEBUG_LOGS=true
